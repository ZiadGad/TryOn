style(type="text/css").
    #outlook a {
        padding: 0;
    }
    .ReadMsgBody {
        width: 100%;
    }
    .ExternalClass {
        width: 100%;
    }
    .ExternalClass * {
        line-height: 100%;
    }
    body {
        margin: 0;
        padding: 0;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
    }
    table,
    td {
        border-collapse: collapse;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
    }
    img {
        border: 0;
        height: auto;
        line-height: 100%;
        outline: none;
        text-decoration: none;
        -ms-interpolation-mode: bicubic;
    }
    p {
        display: block;
        margin: 13px 0;
    }
    .logo {
        font-size: 40px;
        color: #ffffff; /* White text */
        margin: 0;
        text-align: center;
        line-height: 50px;
    }
    .logo .try {
        font-family: 'Crimson Text', serif;
        font-weight: 700;
        margin-bottom: 0px;
        text-shadow:
            -1px -1px 0 #570091,
            1px -1px 0 #570091,
            -1px 1px 0 #570091,
            1px 1px 0 #570091,
            -2px 0 0 #570091,
            2px 0 0 #570091,
            0 -2px 0 #570091,
            0 2px 0 #570091;
    }
    .logo .on {
        font-size: 45px;
        font-family: 'Atkinson Hyperlegible Next', serif;
        font-weight: 800;
        text-shadow:
            -1px -1px 0 #570091,
            1px -1px 0 #570091,
            -1px 1px 0 #570091,
            1px 1px 0 #570091,
            5px 4px 0px rgb(122, 16, 192); /* Additional shadow */
        margin-top: 0px;
        margin-bottom: 0px;
    }